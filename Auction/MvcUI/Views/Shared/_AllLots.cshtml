@using BLL.Interface.Models

@model MvcUI.ViewModels.LotsViewModel

<div>

    @foreach (BLLLot lot in Model.Lots)
    {
        var redStyle = "";
        if (Model.Tab == "my_rates_lots" && lot.CurrentBuyerId != Model.CurrentUserId)
        {
            redStyle = "class=red-color";
        }

        <fieldset @redStyle>
            <dl>
                <dt>Name: @lot.ArtworkName</dt>
                <dt>Author of image: @lot.Author</dt>
                <dt>Artwork format: @lot.ArtworkFormat</dt>
                <dt>Starting price: @lot.StartingPrice</dt>
                <dt>@Html.ActionLink("View details", "Lot", "LotManager", new { id = lot.Id }, null)</dt>
            </dl>
            <br/>
        </fieldset>
    }

</div>
<div>
    <button id="goToFirstPage" onclick="viewLotsObject.openPage('1')">
        First
    </button>

    <button id="goToPage1" onclick="viewLotsObject.numericButtonsOfPagePressed('goToPage1')">
        1
    </button>

    <button id="goToPage2" onclick="viewLotsObject.numericButtonsOfPagePressed('goToPage2')">
        2
    </button>

    <button id="goToPage3" onclick="viewLotsObject.numericButtonsOfPagePressed('goToPage3')">
        3
    </button>

    <button id="goToLastPage" onclick="viewLotsObject.openPage('@Model.MaxPageNumber')">
        Last
    </button>
</div>

<script type="text/javascript">
    var currentPageNumber = @Model.PageNumber;
    var maxPage = @Model.MaxPageNumber;

    viewLotsObject.renderPageButtons(currentPageNumber, maxPage);
</script>
