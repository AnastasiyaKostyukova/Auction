@using BLL.Interface.Models
@using MvcUI.ViewModels
@model LotsViewModel
@{
    ViewBag.Title = "Index";
}

<script src="@Url.Content("~/Scripts/LotManager/ViewLots.js")"></script>

<script type="text/javascript">
    var viewLotsObject = new viewLots();

    viewLotsObject.LOT_ACTION_URL = '@Url.Action("Lots")';
    viewLotsObject.ALL_LOTS = 'all_lots';
    viewLotsObject.MY_LOTS = 'my_lots';
    viewLotsObject.MY_RATES_LOTS = 'my_rates_lots';
    viewLotsObject.MY_WINS_LOTS = 'my_wins_lots'
    viewLotsObject.loadingImage = '@Url.Content("~/content/loadingImages/loading.gif")';

    // page loaded
    $(document).ready(function () {
        viewLotsObject.openTab(viewLotsObject.ALL_LOTS);
    });
</script>

<body>
<br/><br />
<div>
    <div class="col-md-4">
        <label>
            Count of lots per page:
            <select class="form-control" id="countLotsOnPage">
                <option value="5">5</option>
                <option value="10">10</option>
                <option value="20">20</option>
                <option value="30">30</option>
            </select>
        </label><br/><br/>

        <p>
            <b>Search by author artwork:</b>
        </p>
        <input class="form-control" id="authorArtworkName" type="text">
        <br/>

        <p>
            <b>Search by artwork name:</b>
        </p>
        <input class="form-control" id="artworkName" type="text">
        <br/>

        <b>Min price:</b>
        <input class="form-control" id="minimalPrice" type="text">
        <br />

        <b>Max price:</b>
        <input class="form-control" id="maximalPrice" type="text">
        <br/>

        <label>
            <input id="oderbyDate" type="checkbox"/> Order by date of auction
        </label>
        <br/>

        <button class="btn" onclick="viewLotsObject.searchByParameters()">
            Search
        </button>
        <button class="btn" onclick="viewLotsObject.clearFilter()">
            Clear
        </button>
    </div>
</div>


<div class="col-md-8">
    <div class="tabs center-align">
        <button class="btn" id="allLotsButton"
                onclick="viewLotsObject.openTab(viewLotsObject.ALL_LOTS)">
            All lots
        </button>

        <button class="btn" id="myLotsButton"
                onclick="viewLotsObject.openTab(viewLotsObject.MY_LOTS)">
            My lots
        </button>

        <button class="btn" id="myRatesLotsButton"
                onclick="viewLotsObject.openTab(viewLotsObject.MY_RATES_LOTS)">
            My rates
        </button>

        <button class="btn" id="myWinsLotsButton"
                onclick="viewLotsObject.openTab(viewLotsObject.MY_WINS_LOTS)">
            My wins
        </button>
    </div>
    <div id="lotList"></div>
</div>



</body>





